{
  "manifest_version": 2,
  "name": "YouTube Volume Normalizer",
  "description": "Normalize the volume of YouTube videos",
  "version": "0.1",
  "icons": {
    "64": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.youtube.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "permissions": [ "activeTab" ]
}
